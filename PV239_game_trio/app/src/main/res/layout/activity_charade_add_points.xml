<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".frontend.main.start.RemovePlayerActivity" android:orientation="vertical">

        <TextView
                android:text="@string/charade_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_charade_word"
                android:textSize="30sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:textColor="#0000FF"
                android:textStyle="italic"
                android:textAlignment="center"/>

        <TextView
                android:text="@string/charade_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_charade_type"
                android:textSize="30sp"
                android:layout_marginBottom="5sp"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/text_charade_word"
                android:textStyle="bold"
                android:textAlignment="center"/>

        <CheckBox
                android:id="@+id/checkbox_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/text_charade_type"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                tools:visibility="visible"/>

        <CheckBox
                android:id="@+id/checkbox_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/checkbox_one"
                android:layout_centerHorizontal="true"
                tools:visibility="visible"/>

        <CheckBox
                android:id="@+id/checkbox_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/checkbox_two"
                android:layout_centerHorizontal="true"
                tools:visibility="visible"/>

        <CheckBox
                android:id="@+id/checkbox_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/checkbox_three"
                android:layout_centerHorizontal="true"
                tools:visibility="visible"/>

        <CheckBox
                android:id="@+id/checkbox_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/checkbox_four"
                android:layout_centerHorizontal="true"
                tools:visibility="visible"/>

        <CheckBox
                android:id="@+id/checkbox_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/checkbox_five"
                android:layout_centerHorizontal="true"
                tools:visibility="visible"/>


    <TextView
            android:id="@+id/text_view_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/checkbox_six"
            android:text="@string/winners"
            android:textSize="20sp" />

    <Button
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_view_selected"
            android:layout_marginTop="20dp"
            android:text="@string/confirm" />

    <Button
            android:id="@+id/button_new_charade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_confirm"
            android:layout_marginTop="20dp"
            android:text="@string/new_charade" />



</RelativeLayout>