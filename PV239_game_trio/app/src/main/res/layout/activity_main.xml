<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".frontend.MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="10dp">
        <TextView
                android:text="@string/choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/choose" android:layout_marginTop="50dp"
                android:paddingTop="50dp"/>
        <Button
                android:text="@string/charade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/charade"/>
        <Button
                android:text="@string/hangman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/hangman"/>
        <Button
                android:text="@string/tikBum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tikBum"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>