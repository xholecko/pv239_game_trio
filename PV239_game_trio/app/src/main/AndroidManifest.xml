<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.pv239_game_trio">

    <application
            android:name=".backend.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".frontend.main.PlayersActivity"
                android:label="@string/title_activity_players">
        </activity>
        <activity
                android:name=".frontend.games.charade.CharadeAddPointsActivity"
                android:label="@string/charade_points_label"
                android:parentActivityName=".frontend.main.ChooseActivity"/>
        <activity
                android:name=".frontend.main.start.AddPlayerActivity"
                android:label="@string/add_player_label"
                android:parentActivityName=".frontend.main.start.MainActivity">
        </activity>
        <activity
                android:name=".frontend.games.charade.CharadeActivity"
                android:label="@string/charade_label"
                android:parentActivityName=".frontend.main.ChooseActivity">
        </activity>
        <activity
                android:name=".frontend.main.start.ScoreActivity"
                android:label="@string/score_label"
                android:parentActivityName=".frontend.main.start.MainActivity">
        </activity>
        <activity
                android:name=".frontend.games.tikBum.TikBumAddPointsActivity"
                android:label="@string/tikbum_points_label"
                android:parentActivityName=".frontend.main.ChooseActivity">
        </activity>
        <activity
                android:name=".frontend.main.start.RemovePlayerActivity"
                android:label="@string/remove_player_label"
                android:parentActivityName=".frontend.main.start.MainActivity">
        </activity>
        <activity
                android:name=".frontend.main.ChooseActivity"
                android:label="@string/choose_activity_label"
                android:parentActivityName=".frontend.main.start.MainActivity">
        </activity>
        <activity
                android:name=".frontend.games.tikBum.TikBumActivity"
                android:label="@string/tikbum_label"
                android:parentActivityName=".frontend.main.ChooseActivity">
        </activity>
        <activity
                android:name=".frontend.games.hangman.HangmanGameActivity"
                android:label="@string/hangman_label"
                android:parentActivityName=".frontend.main.ChooseActivity">
        </activity>
        <activity android:name=".frontend.main.start.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>